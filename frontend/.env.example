# Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_COMPLIANCE_API_URL=http://localhost:5000
NEXT_PUBLIC_DRIFT_API_URL=http://localhost:5001
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Application Settings
NEXT_PUBLIC_APP_NAME=LLM Infrastructure
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_DRIFT_DETECTION=true
NEXT_PUBLIC_ENABLE_COMPLIANCE=true
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true

# Production Deployment
# For production, update these to your actual API endpoints:
# NEXT_PUBLIC_COMPLIANCE_API_URL=https://api.example.com:5000
# NEXT_PUBLIC_DRIFT_API_URL=https://api.example.com:5001
